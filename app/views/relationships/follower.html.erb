<div class="col-md-push-3 follwing_list">
  <h4 class="text-primary"> Follower User  </h4>
  
  <% @users.each do |user| %>
    <div class="col-md-3" id="follwing_list<%=user.id%>">
      <%= image_tag user.image.url if user.image.present? %><br>
      <%= user.email %> <br>
      <%#= link_to "Unfollow" , "#" , :method => :delete, :remote => :true %>
      
      <%#= link_to "Follow",
      {
        controller:  :relationships, 
        action:  "create",
        follower_id:  current_user.id,
        following_id:  user.followings.build.following_id
      }, 
      remote: :true, method: :post, class: "btn-sm btn-info"  %>
        
    </div>
    
  <% end %>

</div> 
