<p id="notice"><%= notice %></p>
<% if current_user.profile.present? %>
  <p>
    <strong>Name:</strong>
    <%= @profile.name %>
  </p>

  <p>
    <strong>Contact:</strong>
    <%= @profile.contact %>
  </p>

  <% @profile.assets.each do |image| %>
    <div class="col-md-3">
      <%= image_tag image.image_name.url  %>
    </div>
  <% end %>
  <div class="clearfix"> </div> <br>
  <%= link_to 'Edit', edit_profile_path(@profile) %>
<% else %>
  <%= link_to 'Add new Profile', new_profile_path %>
<% end %>
